{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "./build",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2018",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "build"]
}
